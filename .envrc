#!/usr/bin/env sh
# -*- coding: utf-8 -*-

if test -d "$PWD/texmf/"; then
	if test "$TEXMFHOME" != ""; then
		export TEXMFHOME="$PWD/texmf/:$TEXMFHOME"
	else
		export TEXMFHOME="$PWD/texmf/"
	fi
fi

# NOTE(dparo): Not needed, both locally and on Github CI
# export TEXINPUTS="$PWD:$PWD/texmf/tex/latex//:"

# Avoid linebreaks in LaTeX console / log output (or increase columns in terminal)
#      https://tex.stackexchange.com/questions/52988/avoid-linebreaks-in-latex-console-log-output-or-increase-columns-in-terminal
export max_print_line=1000
export error_line=254
export half_error_line=238
